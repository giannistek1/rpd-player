<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="RpdPlayerApp.Views.InputAreaPromptPopup">

    <VerticalStackLayout Padding="20" Spacing="10" BackgroundColor="{DynamicResource BackgroundColor}">

        <Label x:Name="TitleLabel" />

        <Editor x:Name="InputEditor" HeightRequest="300" />

        <HorizontalStackLayout>

            <Button Text="OK" Clicked="OnOkClicked" BackgroundColor="{DynamicResource PrimaryButton}" Margin="0,0,4,0" />

            <Button Text="Cancel" Clicked="OnCancelClicked" BackgroundColor="{DynamicResource SecondaryButton}" Margin="4,0,0,0"  />

        </HorizontalStackLayout>

    </VerticalStackLayout>

</toolkit:Popup>