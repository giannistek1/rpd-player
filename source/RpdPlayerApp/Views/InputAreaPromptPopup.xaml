<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="RpdPlayerApp.Views.InputAreaPromptPopup">

    <Grid RowDefinitions="40, *, 50" Padding="20, 32" BackgroundColor="{DynamicResource BackgroundColor}">

        <Label x:Name="TitleLabel" />

        <ScrollView Grid.Row="1" >

            <Editor x:Name="InputEditor" />
            
        </ScrollView>

        <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="16">

            <Button Text="OK" Clicked="OnOkClicked" BackgroundColor="{DynamicResource PrimaryButton}" Padding="16,0,16,0" Margin="0,0,4,0" />

            <Button Grid.Column="1" Text="Cancel" Clicked="OnCancelClicked" BackgroundColor="{DynamicResource SecondaryButton}" Margin="4,0,0,0"  />

        </Grid>

    </Grid>

</toolkit:Popup>