<?xml version="1.0" encoding="utf-8" ?>
<the49:BottomSheet xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sliders="clr-namespace:Syncfusion.Maui.Sliders;assembly=Syncfusion.Maui.Sliders"
             xmlns:the49="https://schemas.the49.com/dotnet/2023/maui"
             xmlns:m="clr-namespace:UraniumUI.Icons.MaterialSymbols;assembly=UraniumUI.Icons.MaterialSymbols"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
             x:Class="RpdPlayerApp.Views.SongPartDetailBottomSheet"
             Background="{DynamicResource BackgroundColor}">

    <the49:BottomSheet.Detents>
        <the49:RatioDetent Ratio="0.95" />
    </the49:BottomSheet.Detents>
    
    <ScrollView Orientation="Vertical">
       
        <Grid RowDefinitions="22, 40, auto, 30, 30, 30, 50, auto, auto, 50" Padding="12,0,12,0">

            <ImageButton Grid.Row="0" HeightRequest="40" x:Name="CloseImageButton" HorizontalOptions="Center" Pressed="CloseImageButtonPressed">
                <ImageButton.Source>
                    <FontImageSource FontFamily="MaterialRounded" Glyph="{x:Static m:MaterialRounded.Minimize}" Color="{DynamicResource IconColor}" />
                </ImageButton.Source>
            </ImageButton>

            <Grid Grid.Row="1" ColumnDefinitions="2*, 4*, 2*" Margin="0,0,0,0">
                
                <Label Grid.Column="0" x:Name="GenreLabel" Text="K-pop" FontSize="12" VerticalOptions="Center" HorizontalOptions="Start" />

                <Grid Grid.Column="1" x:Name="AlbumGrid" ColumnDefinitions="*" VerticalOptions="Center" HorizontalOptions="Center">
                    <ScrollView x:Name="AlbumScrollView" Orientation="Horizontal" HorizontalScrollBarVisibility="Never" HorizontalOptions="Center">
                        <Label x:Name="AlbumLabel" Text="Album" FontSize="14" FontAttributes="Italic" HorizontalTextAlignment="Center" VerticalOptions="Center" HorizontalOptions="Center" LineBreakMode="NoWrap" />
                    </ScrollView>
                </Grid>
                
                <Label Grid.Column="2" x:Name="ReleaseDateLabel" Text="01-01-2000" FontSize="12" VerticalOptions="Center" HorizontalOptions="End" />

            </Grid>
        
            <!-- Album image -->
            <Border Grid.Row="2" HeightRequest="200" WidthRequest="200" StrokeShape="RoundRectangle 16"
                        Padding="0" VerticalOptions="Start"  Margin="0,8,0,12">

                <ffimageloading:CachedImage Grid.Row="2" HeightRequest="200" x:Name="AlbumImage"/>
            
            </Border>

            <Label Grid.Row="3" x:Name="ArtistLabel" Text="Artist" FontSize="12" TextColor="{DynamicResource SecondaryTextColor}"  VerticalOptions="Center"  HorizontalOptions="Center" />

            <Label Grid.Row="4" x:Name="SongTitleLabel" Text="Song title" FontSize="20" TextColor="{DynamicResource PrimaryTextColor}" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center" />

            <Label Grid.Row="5" x:Name="SongPartLabel" Text="Song part" FontSize="14" TextColor="{DynamicResource SecondaryTextColor}" VerticalOptions="Center" HorizontalOptions="Center" />


            <!-- Audio Progress -->
            <Grid Grid.Row="6" ColumnDefinitions="2*, 6*, 2*" Padding="8,0,8,0">

                <Label Grid.Column="0" x:Name="ProgressLabel" Text="00:00" FontSize="13" TextColor="{DynamicResource SecondaryTextColor}" 
                       VerticalOptions="Center" HorizontalOptions="Start" />

                <Slider Grid.Column="1" x:Name="AudioProgressSlider" 
                        MinimumTrackColor="{DynamicResource DetailAudioProgressColor}" Margin="-30,-10,-30,-10" Maximum="100" Minimum="0" ThumbColor="{DynamicResource DetailAudioProgressColor}" HeightRequest="50" />

                <Label Grid.Column="2" x:Name="DurationLabel" Text="99:99" FontSize="12" TextColor="{DynamicResource SecondaryTextColor}"
                       VerticalOptions="Center" HorizontalOptions="End" />
            
            </Grid>
            
            <!-- Audio buttons -->
            <Grid Grid.Row="7" ColumnDefinitions="2*, 2*, 3*, 2*, 2*"  Margin="0,0,0,4">

                <ImageButton Grid.Column="0" HeightRequest="44" x:Name="PreviousImageButton" Pressed="PreviousButtonPressed">
                    <ImageButton.Source>
                        <FontImageSource FontFamily="MaterialRounded" Glyph="{x:Static m:MaterialRounded.Skip_previous}" Color="{DynamicResource IconColor}" />
                    </ImageButton.Source>
                </ImageButton>

                <ImageButton Grid.Column="1" HeightRequest="34" x:Name="BackwardsImageButton" Pressed="BackwardsImageButtonPressed">
                    <ImageButton.Source>
                        <FontImageSource FontFamily="MaterialRounded" Glyph="{x:Static m:MaterialRounded.Replay_5}" Color="{DynamicResource IconColor}" />
                    </ImageButton.Source>
                </ImageButton>

                <Border Grid.Column="2" x:Name="PlayToggleBorder" HeightRequest="60" WidthRequest="60" StrokeShape="RoundRectangle 30"
                          Padding="0" Background="{DynamicResource PrimaryButton}" VerticalOptions="Center">

                    <ImageButton HeightRequest="60" Padding="4" x:Name="PlayToggleImageButton" Pressed="PlayToggleButtonPressed">
                        <ImageButton.Source>
                            <FontImageSource FontFamily="MaterialRounded" Glyph="{x:Static m:MaterialRounded.Play_pause}" Color="{DynamicResource IconColor}" />
                        </ImageButton.Source>
                    </ImageButton>

                </Border>

                <ImageButton Grid.Column="3" HeightRequest="34" x:Name="ForwardImageButton" Pressed="ForwardImageButtonPressed">
                    <ImageButton.Source>
                        <FontImageSource FontFamily="MaterialRounded" Glyph="{x:Static m:MaterialRounded.Forward_5}" Color="{DynamicResource IconColor}" />
                    </ImageButton.Source>
                </ImageButton>

                <ImageButton Grid.Column="4" HeightRequest="44" x:Name="NextImageButton" Pressed="NextButtonPressed">
                    <ImageButton.Source>
                        <FontImageSource FontFamily="MaterialRounded" Glyph="{x:Static m:MaterialRounded.Skip_next}" Color="{DynamicResource IconColor}" />
                    </ImageButton.Source>
                </ImageButton>


            </Grid>

            <!-- Action buttons -->
            <Grid Grid.Row="8" ColumnDefinitions="2*, 2*, 2*, 2*" Margin="0,8,0,8">

                <ImageButton Grid.Column="0" HeightRequest="34" x:Name="RestartAudioImageButton" Pressed="RestartAudioImageButtonPressed">
                    <ImageButton.Source>
                        <FontImageSource FontFamily="MaterialRounded" Glyph="{x:Static m:MaterialRounded.Restart_alt}" Color="{DynamicResource IconColor}" />
                    </ImageButton.Source>
                </ImageButton>

                <!--<ImageButton Grid.Column="1" HeightRequest="34" x:Name="VoiceImageButton" Pressed="VoiceButtonPressed">
                    <ImageButton.Source>
                        <FontImageSource FontFamily="MaterialRounded" Glyph="{x:Static m:MaterialRounded.Voice_selection_off}" Color="{DynamicResource IconColor}" />
                    </ImageButton.Source>
                </ImageButton>-->

                <ImageButton Grid.Column="1" HeightRequest="34" x:Name="TimerImageButton" Pressed="TimerButtonPressed">
                    <ImageButton.Source>
                        <FontImageSource FontFamily="MaterialRounded" Glyph="{x:Static m:MaterialRounded.Timer_off}" Color="{DynamicResource IconColor}" />
                    </ImageButton.Source>
                </ImageButton>

                <ImageButton Grid.Column="2" HeightRequest="34" x:Name="AutoplayImageButton" Pressed="AutoplayButtonPressed">
                    <ImageButton.Source>
                        <FontImageSource FontFamily="MaterialRounded" Glyph="{x:Static m:MaterialRounded.Block}" Color="{DynamicResource IconColor}" />
                    </ImageButton.Source>
                </ImageButton>

                <!-- TODO: Pressed or clicked? -->
                <ImageButton Grid.Column="3" HeightRequest="34" x:Name="FavoriteImageButton" Pressed="FavoriteButtonPressed">
                    <ImageButton.Source>
                        <FontImageSource FontFamily="MaterialRounded" Glyph="{x:Static m:MaterialRounded.Favorite}" Color="{DynamicResource IconColor}" />
                    </ImageButton.Source>
                </ImageButton>

            </Grid>

            <!-- Volume -->
            <Grid Grid.Row="9" ColumnDefinitions="1*, 7*" Padding="16,0,16,0">

                <ImageButton x:Name="VolumeImageButton" HeightRequest="30" HorizontalOptions="Center" Pressed="VolumeImageButtonPressed">
                    <ImageButton.Source>
                        <FontImageSource FontFamily="MaterialRounded" Glyph="{x:Static m:MaterialRounded.Volume_up}" Color="{DynamicResource IconColor}" />
                    </ImageButton.Source>
                </ImageButton>

                <sliders:SfSlider Grid.Column="1" x:Name="MasterVolumeSlider" VerticalOptions="Center" ValueChanged="MasterVolumeSliderValueChanged" Minimum="0" Interval="50" Maximum="100">

                    <sliders:SfSlider.TrackStyle>
                        <sliders:SliderTrackStyle ActiveFill="{DynamicResource Primary}"
                              InactiveFill="LightGray" />
                    </sliders:SfSlider.TrackStyle>

                    <sliders:SfSlider.ThumbStyle>
                        <sliders:SliderThumbStyle Fill="{DynamicResource Primary}" />
                    </sliders:SfSlider.ThumbStyle>

                </sliders:SfSlider>

            </Grid>

        </Grid>
        
    </ScrollView>

</the49:BottomSheet>
