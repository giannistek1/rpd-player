<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="RpdPlayerApp.Views.InputPromptPopup">

    <VerticalStackLayout Padding="20" Spacing="10" BackgroundColor="{DynamicResource BackgroundColor}">
        
        <Label x:Name="TitleLabel" />
        
        <Entry x:Name="InputEntry" />

        <HorizontalStackLayout>
            
            <Button Text="OK" Clicked="OnOkClicked" BackgroundColor="{DynamicResource PrimaryButton}" />

            <Button Text="Cancel" Clicked="OnCancelClicked" BackgroundColor="{DynamicResource SecondaryButton}" />
            
        </HorizontalStackLayout>
        
    </VerticalStackLayout>
    
</toolkit:Popup>