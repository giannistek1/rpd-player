<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:RpdPlayerApp.Views"
             x:Class="RpdPlayerApp.Views.HomeView"
             BackgroundColor="Black">

    <Grid Padding="5"
          RowDefinitions="20, 20, 20, *"
          ColumnDefinitions="*">

        <Label
            Grid.Row="0"
            Grid.Column="0"
            x:Name="VersionLabel" Text="Version xx" />
        
        <HorizontalStackLayout
            Grid.Row="1">

            <Label
            Grid.Column="0"
            x:Name="SongPartCountLabel" Text="{Binding SongPartCount}" />

            <Label

            Grid.Column="0"
            x:Name="UniqueSongCountLabel" Text="{Binding UniqueSongCount}" />
            
        </HorizontalStackLayout>

        <HorizontalStackLayout
            Grid.Row="2">
            
            <Label
            Grid.Column="0"
            x:Name="ArtistCountLabel" Text="{Binding ArtistCount}" />

            <Label
            Grid.Column="0"
            x:Name="AlbumCountLabel" Text="{Binding AlbumCount}" />
        </HorizontalStackLayout>

        <ListView 
            Grid.Row="3"
            Grid.Column="0"
            CachingStrategy="RecycleElement"
            x:Name="RandomListView" 
            BackgroundColor="DimGray" 
            HasUnevenRows="true"
            ItemTapped="RandomListView_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <HorizontalStackLayout Padding="6">
                            <Label VerticalOptions="CenterAndExpand" Text="{Binding ArtistName}" />
                            <Label VerticalOptions="CenterAndExpand" Text="{Binding ArtistCount, StringFormat=' - {0}' }" />
                        </HorizontalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentView>