<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:RpdPlayerApp.Views"
             x:Class="RpdPlayerApp.Views.HomeView"
             BackgroundColor="Black">

    <Grid Padding="5"
          RowDefinitions="20, 20, 30, 30, 30, 30, *"
          ColumnDefinitions="*">

        <HorizontalStackLayout>
            <Label
            Grid.Row="0"
            Grid.Column="0"
            x:Name="VersionLabel" Text="Version xx" />
        </HorizontalStackLayout>
        
        
        
        <HorizontalStackLayout
            Grid.Row="1">

            <Label
            Grid.Column="0"
            x:Name="SongPartCountLabel" Text="{Binding SongPartCount}" />

            <Label

            Grid.Column="0"
            x:Name="UniqueSongCountLabel" Text="{Binding UniqueSongCount}" />
            
        </HorizontalStackLayout>

        <HorizontalStackLayout
            Grid.Row="2">
            
            <Label
            Grid.Column="0"
            x:Name="ArtistCountLabel" Text="{Binding ArtistCount}" />

            <Label
            Grid.Column="0"
            x:Name="AlbumCountLabel" Text="{Binding AlbumCount}" />
        </HorizontalStackLayout>

        <HorizontalStackLayout
        Grid.Row="3">

            <Button Text="Female"/>
            <Button Text="Male"/>

        </HorizontalStackLayout>

        <HorizontalStackLayout Grid.Row="4">
            
            <Button Text="1st gen"/>
            <Button Text="2nd gen"/>
            <Button Text="3rd gen"/>
            <Button Text="4th gen"/>
            
        </HorizontalStackLayout>


        <HorizontalStackLayout Grid.Row="5">
            
            <Button Text="JYP"/>
            <Button Text="YG"/>
            <Button Text="SM"/>
            
        </HorizontalStackLayout>


        <ListView 
            Grid.Row="6"
            Grid.Column="0"
            CachingStrategy="RecycleElement"
            x:Name="RandomListView" 
            BackgroundColor="DimGray" 
            HasUnevenRows="true"
            ItemTapped="RandomListView_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <HorizontalStackLayout Padding="6">
                            <Label VerticalOptions="CenterAndExpand" Text="{Binding ArtistName}" />
                            <Label VerticalOptions="CenterAndExpand" Text="{Binding ArtistCount, StringFormat=' - {0}' }" />
                        </HorizontalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentView>