<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="RpdPlayerApp.Views.LibraryView"
             Title="Library"
             Disappearing="ContentPage_Disappearing">

    <Grid Padding="5"
          RowDefinitions="20, 50, *"
          ColumnDefinitions="*">

        <Label
            Grid.Row="0"
            Grid.Column="0"
            x:Name="CountLabel" Text="{Binding SongCount}" />

        <HorizontalStackLayout
            Grid.Row="1" >
            
            <Button x:Name="PlayPlaylistButton" Margin="2" Clicked="PlayPlaylistButton_Clicked" Text="Play playlist" />

            <Button x:Name="ClearPlaylistButton" Margin="2" Clicked="ClearButton_Clicked" Text="Clear playlist" />
        </HorizontalStackLayout>

        <toolkit:MediaElement x:Name="audioMediaElement" IsVisible="False"/>

        <ListView 
            Grid.Row="2"
            Grid.Column="0"
            CachingStrategy="RecycleElement"
            x:Name="CurrentPlaylistListView" 
            BackgroundColor="Gray" 
            HasUnevenRows="true"
            ItemTapped="CurrentPlaylistListView_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItem Text="Play" BackgroundColor="LightGreen" CommandParameter="{Binding AudioURL}" Invoked="SwipeItem_Invoked"></SwipeItem>
                            </SwipeView.RightItems>
                            <VerticalStackLayout Padding="10">
                                <Label VerticalOptions="CenterAndExpand" Text="{Binding ArtistName}" />
                                <HorizontalStackLayout>
                                    <Label VerticalOptions="CenterAndExpand" Text="{Binding Title}" />
                                    <Label VerticalOptions="CenterAndExpand" Text="{Binding PartNameFull, StringFormat=' - {0}'}" />
                                </HorizontalStackLayout>
                                <Label VerticalOptions="CenterAndExpand" Text="{Binding AlbumTitle}" />
                            </VerticalStackLayout>
                        </SwipeView>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>