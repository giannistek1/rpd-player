<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             x:Class="RpdPlayerApp.Views.LibraryView">

    <Grid Padding="5"
          RowDefinitions="40, 50, *"
          ColumnDefinitions="*">

        <HorizontalStackLayout Grid.Row="0">
            <Entry WidthRequest="150" x:Name="PlaylistNameEntry" HorizontalTextAlignment="Start" BackgroundColor="Green" TextColor="White" MaxLength="20" Text="myplaylist"/>
            
            <Label WidthRequest="150" x:Name="CountLabel" Text="{Binding SongCount}" />
            
            <material:CheckBox x:Name="ViaCloudCheckBox" IsChecked="True" Text="Via cloud"/>
        </HorizontalStackLayout>


        <HorizontalStackLayout
            Grid.Row="1" >

            <Button x:Name="LoadPlaylistButton" Margin="2" Clicked="LoadPlaylistButton_Clicked" Text="Load" />

            <Button x:Name="PlayPlaylistButton" Margin="2" Clicked="PlayPlaylistButton_Clicked" Text="Play" />

            <Button x:Name="ClearPlaylistButton" Margin="2" Clicked="ClearButton_Clicked" Text="Clear" />

            <Button x:Name="SavePlaylistButton" Margin="2" Clicked="SavePlaylistButton_Clicked" Text="Save" />
        </HorizontalStackLayout>

        <ListView 
            Grid.Row="2"
            Grid.Column="0"
            CachingStrategy="RecycleElement"
            x:Name="CurrentPlaylistListView" 
            BackgroundColor="Gray" 
            HasUnevenRows="true"
            ItemTapped="CurrentPlaylistListView_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <SwipeView>
                            <SwipeView.LeftItems>
                                <SwipeItem Text="Remove" BackgroundColor="Red" CommandParameter="{Binding .}" Invoked="SwipeItemRemoveSongPart"></SwipeItem>
                            </SwipeView.LeftItems>
                            <SwipeView.RightItems>
                                <SwipeItem Text="Remove" BackgroundColor="Red" CommandParameter="{Binding .}" Invoked="SwipeItemRemoveSongPart"></SwipeItem>
                            </SwipeView.RightItems>
                            <VerticalStackLayout Padding="10">
                                <HorizontalStackLayout>
                                    <Image HeightRequest="50" WidthRequest="50" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Aspect="AspectFit">
                                        <Image.Source>
                                            <UriImageSource Uri="{Binding AlbumURL}" CacheValidity="1" CachingEnabled="true"/>
                                        </Image.Source>
                                    </Image>
                                    <VerticalStackLayout Padding="10">
                                        <Label VerticalOptions="CenterAndExpand" Text="{Binding ArtistName}" />
                                        <HorizontalStackLayout>
                                            <Label VerticalOptions="CenterAndExpand" Text="{Binding Title}" />
                                            <Label VerticalOptions="CenterAndExpand" Text="{Binding PartNameFull, StringFormat=' - {0}'}" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>
                                <!--<Label VerticalOptions="CenterAndExpand" Text="{Binding AlbumTitle}" />-->
                            </VerticalStackLayout>
                        </SwipeView>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentView>