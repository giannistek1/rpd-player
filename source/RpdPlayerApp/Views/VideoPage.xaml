<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RpdPlayerApp.Views.VideoPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="VideoPage">
    
    <Grid RowDefinitions="50,50, auto" ColumnDefinitions="*">

        <HorizontalStackLayout Grid.Row="0">

            <Label x:Name="ArtistLabel" TextColor="White" />
            
        </HorizontalStackLayout>
        
        <HorizontalStackLayout Grid.Row="1">
           
            <Label x:Name="SongTitleLabel" TextColor="White" />

            <Label Text="(Mirrored)" TextColor="White"/>

        </HorizontalStackLayout>

        <toolkit:MediaElement Grid.Row="2" HeightRequest="290" x:Name="VideoMediaElement"/>
        
    </Grid>
</ContentPage>