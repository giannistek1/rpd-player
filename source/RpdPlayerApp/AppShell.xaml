<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RpdPlayerApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RpdPlayerApp"
    xmlns:views="clr-namespace:RpdPlayerApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Rpd Player"
    Shell.TabBarBackgroundColor="Black"
    Shell.TabBarTitleColor="LightGreen"
    Shell.TabBarUnselectedColor="White">

    <ShellContent
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />
    
</Shell>
